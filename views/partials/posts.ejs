<div class="row">
  <% for (let post of posts) { %>
    <div class="col-lg-4 col-md-6 mb-4">
      <div class="card h-100">
        <a href="/post_details/<%= post.id %>/"><img class="card-img-top" src="<%= post.image_url %>"
            alt="Post Image" /></a>
        <div class="card-body">
          <h4 class="card-title">
            <a href="/post_details/<%= post.id %>/">
              <%= post.title %>
            </a>
          </h4>
          <p class="card-text">
            <%= post.post_description %>
          </p>
        </div>
        <div class="card-footer">

          <!-- RATES -->
          <% if (post.average_rating < 1.5) {%>
            <div>
              <span>Rating:</span>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star"></span>
              <span class="fa fa-star"></span>
              <span class="fa fa-star"></span>
              <span class="fa fa-star"></span>
            </div>
            <% } else if (post.average_rating < 2.5) { %>
              <div>
                <span>Rating:</span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
              </div>
              <% } else if (post.average_rating < 3.5) { %>
                <div>
                  <span>Rating:</span>
                  <span class="fa fa-star checked"></span>
                  <span class="fa fa-star checked"></span>
                  <span class="fa fa-star checked"></span>
                  <span class="fa fa-star"></span>
                  <span class="fa fa-star"></span>
                </div>
                <% } else if (post.average_rating < 4.5) { %>
                  <div>
                    <span>Rating:</span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star"></span>
                  </div>
                  <% } else if (post.average_rating < 5.5) { %>
                    <div>
                      <span>Rating:</span>
                      <span class="fa fa-star checked"></span>
                      <span class="fa fa-star checked"></span>
                      <span class="fa fa-star checked"></span>
                      <span class="fa fa-star checked"></span>
                      <span class="fa fa-star checked"></span>
                    </div>
                    <% } else { %>
                      <div>
                        <span>Rating:</span>
                        <span class="fa fa-star"></span>
                        <span class="fa fa-star"></span>
                        <span class="fa fa-star"></span>
                        <span class="fa fa-star"></span>
                        <span class="fa fa-star"></span>
                      </div>
                      <% } %>
        </div>
      </div>
    </div>
    <% } %>
</div>
